<p id="notice"><%= notice %></p>

<h1>Search for booking</h1>

<%= form_tag(booking_search_path) do %>
  Container <%= text_field_tag :container %><br>
  Model <%= text_field_tag :model %><br>
  Make <%= text_field_tag :make %><br>
  Vehicle Type <%= select_tag 'vehicle_type', options_for_select([['Caravan'], ['Car']]) %><br>
  DropOff Date min <%= date_select("booking", "dropoff_min") %><br>
  DropOff Date max <%= date_select("booking", "dropoff_max") %><br>
  <%= submit_tag 'Search' %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Booking</th>
      <th>Original file name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @uploads.each do |upload| %>
      <tr>
        <td><%= upload.booking_id %></td>
        <td><%= upload.original_file_name %></td>
        <td><%= link_to 'Show', upload %></td>
        <td><%= link_to 'Edit', edit_upload_path(upload) %></td>
        <td><%= link_to 'Destroy', upload, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

